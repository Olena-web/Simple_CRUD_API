{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
          
    "lib": [
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    
  },
  "ts-node-esm/ --esm / esm": true,
  "ts-node":{
    "esm": true,
  },
 
  "include": [
    "src/**/*",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./src/.env",
    "./dist"
  ],
  "compileOnSave": true,
  "watch": true,
   
  "extends": "@tsconfig/node16/tsconfig.json"

}